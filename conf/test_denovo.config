/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    This test only runs on the server due to the high memory demand during Flye assembly.

    Use as follows:
        nextflow run genomic-medicine-sweden/meta-val -profile test_denovo,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Test user defined taxid profile'
    config_profile_description = 'Minimal test dataset to check pipeline function'

    // Limit resources so that this can run on GitHub Actions
    max_cpus                   = 6
    max_memory                 = '16.GB'
    max_time                   = '6.h'

    // Input data
    input                         = '../final_test_data/samplesheet_v2.csv'
    taxid                         = '349741 324925'

    // Extract reads
    perform_extract_reads         = true
    extract_kraken2_reads         = true
    fastq_output                  = true
    extract_centrifuge_reads      = false
    extract_diamond_reads         = true

    // de novo
    skip_shortread_denovo         = false
    skip_longread_denovo          = false
    longread_denovo_tool          = 'flye'

    // Screen pathogens
    perform_screen_pathogens      = false

    // Genome references
    genome = 'R64-1-1'
}
